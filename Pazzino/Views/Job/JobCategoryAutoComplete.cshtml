

    @(Html.Kendo().AutoComplete()
          .Name("category")
          .MinLength(3)
          .Delay(500)
          .HtmlAttributes(new { style = "width:100%" })
          .DataSource(source =>
          {
              source.Read(read =>
              {
                  read.Action("GetJobCategories", "JobCategory").Data("onAdditionalDataJobCategory");
              })
              .ServerFiltering(true);
          }).ValuePrimitive(true)
          .Placeholder("Job Title, Keyword")
    )
    <script>
        function onAdditionalDataJobCategory() {
            return {
                text: $("#category").val()
            };
        }
    </script>
