@model Pazzino.Models.ResumeSearchFilter

<form action="/Resume/SearchResume">
    
    <div class="form-group">
        <label for="keyword">Keyword</label>
        @Html.Kendo().TextBoxFor(x => x.Keyword)
    </div>
    <div class="form-group">
        <label for="FromDate">Upload Date From</label>
        @Html.Kendo().DatePickerFor(x => x.FromDate)
    </div>
    <div class="form-group">
        <label for="ToDate">UPload Date To</label>
        @Html.Kendo().DatePickerFor(x => x.ToDate)
    </div>
    <div class="form-group">
        <label for="Degree">Degree</label>
        @Html.Kendo().TextBoxFor(x => x.DegreeSearch)
    </div>
    <div class="form-group">
        <label for="ToDate">Education</label>
        @Html.Kendo().TextBoxFor(x => x.EducationSearch)
    </div>
    <div class="form-group">
        <label for="Experience">Experience Year</label>
        @Html.Kendo().TextBoxFor(x => x.ExperienceYearSearch)
    </div>
    <div class="form-group">
        <label for="Language">Language</label>
        @Html.Kendo().TextBoxFor(x => x.LanguageSearch)
    </div>
    <div class="form-group">
        <label for="Skill">Skill</label>
        @Html.Kendo().TextBoxFor(x => x.SkillSearch)
    </div>

    <button onclick="btnSearchResume(this);" class="k-primary k-button" id="btnSearch" type="button" data-role="button" role="button" aria-disabled="false" tabindex="0">
        Search!
    </button>
</form>

<script>
    

    function btnSearchResume(e) {
        ajaxFormSubmit(e, function () {
            var grid = $("#ResumeGrid").data('kendoGrid');
            if (grid) {
                reloadGridonSearch(grid)
            }
        })
    }
</script>